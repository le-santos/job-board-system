<h2>Criar nova vaga para <%= Company.find(params[:company_id]).name  %> </h2>

<%= form_with(model: @job) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Ex: Desenvolvedor Java Pleno " %><br />

  <%= f.label :details %>
  <%= f.text_field :details, placeholder: "Ex: Desenvolver aplicaÃ§Ãµes para ..." %><br />

