<h2>Crie sua conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "candidates/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t(".minimum_password_length", count: @minimum_password_length ) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field :cpf %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_field :biography %>
  </div>

  <div class="field">
    <%= f.label :skills %><br />
    <%= f.text_field :skills %>
  </div>

  <div class="actions">
    <%= f.submit t(".sign_up") %>
  </div>
<% end %>

<%= render "candidates/shared/links" %>
