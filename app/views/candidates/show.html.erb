<%= render 'components/main_header' do %>
  <h2>Perfil do candidato</h2>
<% end %>

<section class="container w-75 company-details">
  <div class="card mb-4 mb-5 shadow-sm">
    <div class="card-header d-flex flex-column flex-md-row align-items-center justify-content-center">
      <h6 class="display-6 mt-2 px-1 px-md-4 text-center"><%= @candidate.name %></h6>
    </div>
    <div class="card-body px-5">
      <dl class="row mb-0">
        <dt class="col-sm-3"> <%=t('.email')%></dt>
        <dd class="col-sm-9"><%= @candidate.email %></dd>
        
        <dt class="col-sm-3">CPF</dt>
        <dd class="col-sm-9"><%= @candidate.cpf %></dd>
        
        <dt class="col-sm-3"><%=t('.phone')%></dt>
        <dd class="col-sm-9"><%= @candidate.phone %></dd>
        
        <dt class="col-sm-3"><%=t('.biography')%></dt>
        <dd class="col-sm-9"><%= @candidate.biography %></dd>
        
        <dt class="col-sm-3"><%=t('.skills')%></dt>
        <dd class="col-sm-9"><%= @candidate.skills %></dd>
      </dl>
    </div>

    <div class="card-footer text-muted px-5">
      <%= link_to t('.edit_profile'), edit_candidate_path(@candidate), class: "btn btn-success my-2"  %>
      <%= link_to t('.my_applications'), job_applications_candidate_path(@candidate), class: "btn btn-secondary my-2"  %>
    </div>
  </div>
</section>
