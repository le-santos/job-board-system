<section class="d-flex flex-column mx-auto justify-content-around" style="min-height: 400px; max-width: 50vh">
  <h2>Esqueceu a senha?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
                html: { method: :post }, class: "form-signin w-100") do |f| %>

    <%= render "/shared/error_messages", resource: resource %>

    <div class="field form-group mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: "btn btn-warning" %>
    </div>
  <% end %>

  <div class="shared-links">
    <%= render "/shared/links" %>
  </div>
</section>